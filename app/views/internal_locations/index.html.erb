<p id="notice"><%= notice %></p>

<h1>Listing Internal Locations</h1>

<table class="responsive-table centered striped highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internal_locations.each do |internal_location| %>
      <tr>
        <td><%= internal_location.name %></td>
        <td><%= internal_location.activated %></td>
        <td><%= link_to 'Show', internal_location %></td>
        <td><%= link_to 'Edit', edit_internal_location_path(internal_location) %></td>
        <td><%= link_to 'Destroy', internal_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

