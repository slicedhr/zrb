<%= form_for(@subsidiary) do |f| %>


  <div class="sty-sucur z-depth-1">
      <h5 class="sty-new-ubi-header">Sucursal <i class="fa fa-building-o sty-icon-header-for"></i></h5>
        <div class="input-field sty-new-ubi-caja">
          <%= f.label :address, 'DirecciÃ³n' %>
          <%= f.text_field :address %>
        </div>
        <div class="input-field sty-new-ubi-caja">
          <%= f.collection_select :city_id, City.all, :id, :name, include_blank: 'Selecciona una ciudad', class: "form-control" %>
          <%= f.label :city_id, 'Ciudad' %>
        </div>
        <div class="row">
          <div class="col s5 right-align btn-atras-for">
            <%= link_to subsidiaries_path, class: "waves-effect waves-light btn red" do %>
