<%= form_for(@root_category) do |f| %>
  
  <div class="sty-new-ubi z-depth-1">
    <h5 class="sty-new-ubi-header">Categoría Raíz <i class="fa fa-object-group sty-icon-header-for"></i></h5>
    <div class="input-field sty-new-ubi-caja">
      <%= f.label :text, 'Categoría' %>
      <%= f.text_field :text %>
    </div>

    <div class="row">
          <div class="col s5 right-align btn-atras-for">
            <%= link_to root_categories_path, class: "waves-effect waves-light btn red" do %>
              <i class="fa fa-share-square-o"></i> Atras
            <% end %>
          </div>
          <span class="col s1">&nbsp;</span>
          <div class="col s5 left-align">
            <button type="submit" class="waves-effect waves-light btn green"><i class="fa fa-check-square-o"></i> Listo</button>
          </div>
    </div>
  </div>
<% end %>
<div class="row mns-error center-align">
  <% if @root_category.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @root_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
