<p id="notice"><%= notice %></p>

<h1>Lista de Categorias Raices</h1>

<table class="bordered highlight responsive-table">
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @root_categories.each do |root_category| %>
      <tr>
        <td><%= root_category.text %></td>
        <td><%= link_to 'Mostrar', root_category %></td>
        <td><%= link_to 'Editar', edit_root_category_path(root_category) %></td>
        <td><%= link_to 'Eliminar', root_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

